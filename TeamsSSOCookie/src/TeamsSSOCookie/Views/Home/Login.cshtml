@{

    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<h1>Login</h1>
@if(Context.Request.Headers["User-Agent"].ToString().IndexOf("Teams") != -1 || Context.Request.Host.ToString() == "teams.microsoft.com") {
    <input type="text" id="returnUrl" style="display: none;" />
    <script src="https://code.jquery.com/jquery-3.1.1.js"
            integrity="sha384-VC7EHu0lDzZyFfmjTPJq+DFyIn8TUGAJbEtpXquazFVr00Q/OOx//RjiZ9yU9+9m"
            crossorigin="anonymous"></script>
    <script src="https://statics.teams.cdn.office.net/sdk/v1.8.0/js/MicrosoftTeams.min.js" integrity="sha384-5ilKjPffKMvf1YelNqWjOhy5WJC9rkHpgF9pASMY/eRFlb619wOrCGMVIg/a/71o" crossorigin="anonymous"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
}
else
{
    <li id="microsoft">
        <a href="/loginmicrosoft?returnUrl=@returnUrl"><i class="fab fa-microsoft fa-lg"></i> Login with Microsoft</a>
    </li>
}

